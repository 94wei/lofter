<view style="height:{{titleBarHeight}}px;padding-top:{{statusBarHeight}}px;z-index: 999">
  <view class="header" style="height:{{titleBarHeight}}px;padding-top:{{statusBarHeight}}px">
    <view wx:if="{{showIcon}}" class="title-bar">
      <view class="back" bindtap="headerBack" wx:if="{{showBack}}"><image src="./img/left.png"></image></view>
      <view class="line"></view>
      <view class="home" bindtap="headerHome"><image src="./img/home.png"></image></view>
    </view>
    <view wx:if="{{showTitle}}" class="header-title">{{title}}</view>
  </view>
</view>
