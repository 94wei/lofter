.no-more-goods{
    text-align: center;
    font-size: 24rpx;
    padding-bottom:48rpx;
    color: #999;
}



::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}



.goods-container{
    display: flex;
    justify-content: space-between;
    flex-wrap:wrap;
    box-sizing: content-box;
    padding: 24rpx;
}
.goods-box{
    position: relative;
    display: flex;
    flex-direction: column;
    width: 339rpx;
    height: 339rpx;
    background-color: #fff;
    /*overflow: hidden;*/
    margin-bottom: 24rpx;
}
.goods-box .img-box{
    width: 339rpx;
    height: 339rpx;
    /*overflow: hidden;*/
}
.goods-box .img-box image{
    width: 339rpx;
    height: 339rpx;
}
.goods-box .text{
    color: white;
    position: absolute;
    bottom: 10rpx;
    left: 40rpx;
    font-size: 22rpx;
}
.goods-box .textlove{
    color: white;
