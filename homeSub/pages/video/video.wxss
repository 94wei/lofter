/* pages/video/video.wxss */
@import "/miniprogram_npm/vant-weapp/common/index.wxss";

.videoFirst{
    width: 100%;
    height: 32vh;
    position: fixed;
    top: 0;
    z-index: 999;
    background-color: white;
}
video{
    width: 100%;
    height: 32vh;
    background-color: white;
}


.controls {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    height: 32vh;
    position: fixed;
}




.play{
    width: 200rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 10rpx;
    background-color: rgba(39,39,39,1);
    font-size: 22rpx;
    color: white;
}
.pause{
    width: 200rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 10rpx;
    background-color: rgba(213,50,38,1);
    font-size: 22rpx;
    color: white;
}


.main {
    box-sizing: border-box;
    height: 67vh;
    position: fixed;
    margin-top: 1vh;
    bottom: 0;


}

